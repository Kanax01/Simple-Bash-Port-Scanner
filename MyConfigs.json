{
  "kali_setup_config": {
    "version": "1.0",
    "description": "Kali Linux 2025.3 Automated Setup Configuration",
    "system_settings": {
      "update_system": true,
      "upgrade_system": true,
      "cleanup_after_install": true,
      "remove_unnecessary_packages": true,
      "autoremove_orphaned_packages": true
    },
    "network_settings": {
      "configure_network_manager": true,
      "enable_ssh_service": false,
      "ssh_port": 22,
      "configure_proxy": false,
      "proxy_url": ""
    },
    "security_settings": {
      "enable_firewall": true,
      "firewall_rules": {
        "allow_ssh": false,
        "allow_http": false,
        "allow_https": false
      },
      "harden_system": false,
      "disable_root_login": false
    },
    "tool_configurations": {
      "wireshark": {
        "enabled": true,
        "settings": {
          "disable_wireshark_sudo": true,
          "add_user_to_wireshark_group": true,
          "configure_capture_permissions": true,
          "default_interface": "any",
          "disable_lua_scripts": false
        }
      },
      "metasploit": {
        "enabled": true,
        "settings": {
          "initialize_database": true,
          "enable_auto_update": true,
          "configure_database_connection": true,
          "db_driver": "postgresql",
          "db_name": "msf",
          "db_user": "msf",
          "db_password": "msf",
          "start_service_on_boot": true
        }
      },
      "nmap": {
        "enabled": true,
        "settings": {
          "update_nmap_scripts": true,
          "configure_nse_scripts": {
            "enable_all_scripts": false,
            "custom_scripts": ["http-enum", "ssl-cert", "vulners"]
          },
          "performance_optimization": {
            "max_parallelism": 10,
            "min_rate": 100,
            "max_retries": 2
          }
        }
      },
      "burpsuite": {
        "enabled": false,
        "settings": {
          "configure_proxy": true,
          "proxy_port": 8080,
          "import_custom_certificates": false
        }
      },
      "john": {
        "enabled": true,
        "settings": {
          "enable_wordlist_download": true,
          "custom_wordlists": ["rockyou", "fasttrack"]
        }
      },
      "aircrack_ng": {
        "enabled": true,
        "settings": {
          "configure_wireless_drivers": true,
          "enable_monitor_mode_helpers": true
        }
      }
    },
    "package_management": {
      "install_additional_tools": {
        "enabled": true,
        "tools_list": [
          "gobuster",
          "sqlmap",
          "nikto",
          "hydra",
          "enum4linux",
          "bloodhound",
          "crackmapexec"
        ]
      },
      "install_development_tools": {
        "enabled": false,
        "tools_list": [
          "git",
          "python3-pip",
          "gcc",
          "make"
        ]
      }
    },
    "user_preferences": {
      "create_custom_aliases": true,
      "setup_bashrc_customizations": true,
      "configure_terminal": {
        "enable_color_prompt": true,
        "show_git_branch": true,
        "custom_prompt": "\\[\\033[01;31m\\]\\u@\\h\\[\\033[00m\\]:\\[\\033[01;34m\\]\\w\\[\\033[00m\\]\\$ "
      }
      "custom_tools_resources": {
        "enabled": true,
        "resources": [
          "ENTER LINKS HERE",
          "ENTER LINKS HERE"
        ]
      }
    }
  }
}
